<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="12dp" />
            <padding android:left="2dp" android:top="4dp" android:right="2dp" android:bottom="8dp" />
        </shape>
    </item>
    <!-- Main background layer -->
    <item android:top="4dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/split_gray" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
